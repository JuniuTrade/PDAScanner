<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_broadcast_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="广播输出的结果显示区" />

    <EditText
        android:id="@+id/et_emulator_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_broadcast_result"
        android:layout_marginTop="20dip"
        android:hint="模拟键输出的结果显示区"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_emulator_result"
        android:layout_marginTop="20dip">

        <RadioButton
            android:id="@+id/radio_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广播方式输出"/>

        <RadioButton
            android:id="@+id/radio_emulate_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模拟键方式输出"/>

        <RadioButton
            android:id="@+id/radio_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直接填充方式输出"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="20dip"
        android:text="清空"/>

</RelativeLayout>